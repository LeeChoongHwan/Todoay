<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryAddFragment"
    android:background="@drawable/bg_bottom_dialog"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/category_add_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/category_add_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_add_cancel_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="textPersonName"
        android:hint="카테고리 이름"
        android:fontFamily="@font/white"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="" />

    <TextView
        android:id="@+id/category_add_color_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_add_et"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="색상" />

    <ImageView
        android:id="@+id/category_add_color_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/category_add_color_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        android:src="@drawable/bg_category_color" />

    <android.widget.Button
        android:id="@+id/category_add_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_add_color_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_primary_fail_btn"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:text="추가하기" />


</androidx.constraintlayout.widget.ConstraintLayout>