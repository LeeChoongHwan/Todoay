<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg_pop_up_alert_dialog"
    tools:context=".view.todo.daily.DeleteRepeatDailyAlertDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/delete_repeat_daily_alert_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            android:text="정말 삭제하시겠어요?\n반복되는 TODO입니다."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.Button
        android:id="@+id/delete_repeat_daily_alert_dialog_delete_selected_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_repeat_daily_btn"
        android:fontFamily="@font/regular"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:text="이 TODO만 삭제"/>

    <android.widget.Button
        android:id="@+id/delete_repeat_daily_alert_dialog_delete_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_repeat_daily_btn"
        android:fontFamily="@font/regular"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:text="반복 TODO 모두 삭제"/>

    <android.widget.Button
        android:id="@+id/delete_repeat_daily_alert_dialog_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_repeat_daily_btn"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="취소"/>
</LinearLayout>