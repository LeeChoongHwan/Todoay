<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/email_cert_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back_btn" />

    <TextView
        android:id="@+id/email_cert_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/email_cert_backBtn"
        app:layout_constraintBottom_toBottomOf="@id/email_cert_backBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Todoay"
        android:textColor="#000000"
        android:textSize="24sp"
        app:fontFamily="@font/blackoblique" />

    <View
        android:id="@+id/email_cert_top_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/email_cert_backBtn"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/email_cert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_cert_backBtn"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_backBtn"
        android:layout_marginTop="40dp"
        android:text="이메일 인증"
        android:textColor="#000000"
        android:textSize="20sp"
        app:fontFamily="@font/bold" />

    <TextView
        android:id="@+id/email_cert_emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/email_cert_title"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_title"
        android:layout_marginTop="150dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="이메일"
        app:fontFamily="@font/regular"/>

    <EditText
        android:id="@+id/email_cert_emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_cert_emailText"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_emailText"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:inputType="textEmailAddress" />

    <android.widget.Button
        android:id="@+id/email_cert_sendVerifyCodeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/checkrepbtn_fail_background"
        android:clickable="false"
        android:text="인증번호 전송"
        android:textColor="@color/main_color"
        app:layout_constraintBottom_toBottomOf="@id/email_cert_emailEditText"
        app:layout_constraintLeft_toRightOf="@id/email_cert_emailEditText"
        app:layout_constraintTop_toTopOf="@id/email_cert_emailEditText" />

    <TextView
        android:id="@+id/email_cert_verifyCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="인증번호"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="gone"
        app:fontFamily="@font/regular"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_emailEditText"
        app:layout_constraintTop_toBottomOf="@id/email_cert_emailEditText" />

    <EditText
        android:id="@+id/email_cert_verifyCodeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_verifyCodeText"
        app:layout_constraintTop_toBottomOf="@id/email_cert_verifyCodeText" />

    <android.widget.Button
        android:id="@+id/email_cert_resendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/checkrepbtn_background"
        android:text="재전송"
        android:textColor="@color/main_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/email_cert_verifyCodeEditText"
        app:layout_constraintLeft_toRightOf="@id/email_cert_verifyCodeEditText"
        app:layout_constraintTop_toTopOf="@id/email_cert_verifyCodeEditText" />

    <android.widget.Button
        android:id="@+id/email_cert_okayBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/confirmbtn_fail_background"
        android:clickable="false"
        android:text="확인"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_cert_verifyCodeEditText" />

    <TextView
        android:id="@+id/email_cert_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호가 일치하지 않습니다."
        android:textColor="@color/red"
        android:visibility="gone"
        app:fontFamily="@font/white"
        app:layout_constraintLeft_toLeftOf="@id/email_cert_verifyCodeEditText"
        app:layout_constraintTop_toBottomOf="@id/email_cert_verifyCodeEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>