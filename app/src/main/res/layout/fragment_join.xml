<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/join_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/join_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/blackoblique"
        android:text="Todoay"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/join_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/join_back_btn" />

    <View
        android:id="@+id/join_top_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/join_back_btn"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/join_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bold"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"
        app:layout_constraintTop_toBottomOf="@id/join_back_btn" />

    <TextView
        android:id="@+id/join_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"
        app:layout_constraintTop_toBottomOf="@id/join_title_tv" />

    <EditText
        android:id="@+id/join_email_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_email_tv"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"/>

    <TextView
        android:id="@+id/join_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"
        app:layout_constraintTop_toBottomOf="@id/join_email_et" />

    <EditText
        android:id="@+id/join_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_password_tv"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"/>

    <TextView
        android:id="@+id/join_passwordcheck_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="비밀번호 확인"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"
        app:layout_constraintTop_toBottomOf="@id/join_password_et" />

    <EditText
        android:id="@+id/join_passwordcheck_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_passwordcheck_tv"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"/>

    <TextView
        android:id="@+id/join_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"
        app:layout_constraintTop_toBottomOf="@id/join_passwordcheck_et" />

    <EditText
        android:id="@+id/join_nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_nickname_tv"
        app:layout_constraintLeft_toLeftOf="@id/join_back_btn"/>

    <android.widget.Button
        android:id="@+id/join_nicknamecheck_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/checkrepbtn_fail_background"
        android:enabled="false"
        android:fontFamily="@font/regular"
        android:text="중복확인"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/join_nickname_et"
        app:layout_constraintLeft_toRightOf="@id/join_nickname_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/join_nickname_et" />

    <android.widget.Button
        android:id="@+id/join_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/confirmbtn_fail_background"
        android:enabled="false"
        android:text="회원가입"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_nickname_et" />

    <TextView
        android:id="@+id/join_password_errormessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 8~20자/영어,숫자,특수문자여야 합니다."
        android:textColor="@color/red"
        android:visibility="gone"
        app:fontFamily="@font/white"
        app:layout_constraintLeft_toLeftOf="@id/join_password_et"
        app:layout_constraintTop_toBottomOf="@id/join_password_et" />

    <TextView
        android:id="@+id/join_passwordcheck_errormessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/red"
        android:visibility="gone"
        app:fontFamily="@font/white"
        app:layout_constraintLeft_toLeftOf="@id/join_passwordcheck_et"
        app:layout_constraintTop_toBottomOf="@id/join_passwordcheck_et" />

    <TextView
        android:id="@+id/join_nickname_errormessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임이 중복됩니다."
        android:textColor="@color/red"
        android:visibility="gone"
        app:fontFamily="@font/white"
        app:layout_constraintLeft_toLeftOf="@id/join_nickname_et"
        app:layout_constraintTop_toBottomOf="@id/join_nickname_et" />

</androidx.constraintlayout.widget.ConstraintLayout>