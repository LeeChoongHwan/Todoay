<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/myinfomodify_backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/myinfomodify_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/blackoblique"
        android:text="Todoay"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/myinfomodify_backbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/myinfomodify_backbtn" />

    <TextView
        android:id="@+id/myinfo_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:enabled="false"
        android:fontFamily="@font/regular"
        android:text="확인"
        android:textColor="@color/gray"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/myinfomodify_backbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/myinfomodify_backbtn" />

    <TextView
        android:id="@+id/myinfomodify_modify_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bold"
        android:text="내 정보 변경"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_backbtn" />

    <TextView
        android:id="@+id/myinfomodify_changepicture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="프로필 사진"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_modify_title_tv" />

    <ImageView
        android:id="@+id/myinfomodify_addpicture_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_changepicture_tv"
        app:srcCompat="@drawable/add_picture_btn" />

    <ImageView
        android:id="@+id/myinfomodify_addpicture_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add_picture_cancel_btn"
        app:layout_constraintLeft_toRightOf="@id/myinfomodify_addpicture_btn"
        app:layout_constraintTop_toTopOf="@id/myinfomodify_addpicture_btn"/>

    <TextView
        android:id="@+id/myinfomodify_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_addpicture_btn" />

    <EditText
        android:id="@+id/myinfomodify_nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_nickname_tv"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"/>

    <TextView
        android:id="@+id/myinfomodify_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="상태 메세지"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_nickname_et" />

    <EditText
        android:id="@+id/myinfomodify_message_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_message_tv"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_backbtn"/>

    <View
        android:id="@+id/join_top_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_backbtn"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/myinfo_nickname_alert_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:fontFamily="@font/white"
        app:layout_constraintLeft_toLeftOf="@id/myinfomodify_nickname_et"
        app:layout_constraintTop_toBottomOf="@id/myinfomodify_nickname_et" />


</androidx.constraintlayout.widget.ConstraintLayout>