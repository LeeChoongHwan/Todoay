<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_layout"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_category_color" />

    <TextView
        android:id="@+id/category_name"
        app:layout_constraintTop_toTopOf="@id/category_color"
        app:layout_constraintBottom_toBottomOf="@id/category_color"
        app:layout_constraintLeft_toRightOf="@id/category_color"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="카테고리 이름" />

    <ImageView
        android:id="@+id/category_sort_btn"
        app:layout_constraintTop_toTopOf="@id/category_color"
        app:layout_constraintBottom_toBottomOf="@id/category_color"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_item_sort" />


</androidx.constraintlayout.widget.ConstraintLayout>