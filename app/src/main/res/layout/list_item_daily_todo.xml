<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/daily_todo_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/regular"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/daily_todo_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_dot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/daily_todo_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/daily_todo_checkbox"
        android:paddingLeft="20dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/daily_todo_hashtag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:fontFamily="@font/regular"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/daily_todo_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/daily_todo_checkbox"
        app:layout_constraintLeft_toRightOf="@id/daily_todo_checkbox"
        app:layout_constraintRight_toLeftOf="@id/daily_todo_dot"
         />


</androidx.constraintlayout.widget.ConstraintLayout>