<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_content_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="setting_content"/>

    <TextView
        android:id="@+id/setting_content_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/setting_content_name"
        app:layout_constraintBottom_toBottomOf="@id/setting_content_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text=">"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/setting_content_name"

        android:background="@color/light_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>